<!-- エラーメッセージ -->
<% if @question.errors.any? %>
	<div class="alert alert-danger" role="alert">
		<strong>エラー</strong>
		<ul>
			<% @question.errors.full_messages do |message| %>
			<li><p><%= message %></p></li>
			<% end %>
		</ul>
	</div>
<% end %>
<!-- / -->
<div class="edit-question-view">
	<div class="edit-question-form-section row">
		<%= form_for(@question, url:accident_question_path, method: :patch) do |f| %>
		<div class="question-guide">
			<p>質問内容を編集してください</p>
		</div>
		<div class="question-form">
			<%= f.text_area :title, class:"form-control", rows:"3", id:"InputTextarea", placeholder:"質問概要&#13;&#10;&#13;&#10;交差点の事故の過失割合について".html_safe %>
		</div>
		<div class="question-form">
			<%= f.text_area :body, class:"form-control", rows:"20", id:"InputTextarea", placeholder:"質問詳細&#13;&#10;&#13;&#10;十字路交差点で事故を起こし、保険会社から1:9と言われました。相手は一時停止線を無視して交差点に進入しています。こちらにも１割責任割合があることが納得いきません。本当に１割負担しなければならないでしょうか。".html_safe  %>
		</div>
		<div class="question-tag-section">
			<div class="tag-guide">
				<p>質問内容に関係するタグを入力してください（カンマ「,」で区切って複数入力可）</p>
			</div>
			<div class="form-group form-group-lg">
				<%= text_field_tag 'question[tag_list]', @question.tag_list.join(','), class:"form-control", data: {role: "tagsinput"} %>
			</div>
		</div>
		<div class="question-submit-btn-wrap"><%= f.submit "編集内容を投稿する", class:"btn btn-primary" %></div>
		<div class="edit-accident-link-btn-wrap"><%= link_to "事故内容を確認", accident_path(@question.accident.id), class:"btn btn-default" %></div>
		<% end %>
	</div>
</div>